<div class="section section-accordion shop-contact" id="shopContact">
	<div class="section-header">
		<h3 class="title">1. Contact Information</h3>
	</div>
	<div class="section-body">		
		<fieldset>
			<div class="control-group">
				<label class="control-label">Name</label>
				<div class="row-fluid">
					<div class="span4">
						<div class="controls">
							<input type="text" class="input-text input-block-level">
							<span class="help-block">First</span>
						</div>
					</div>
					<div class="span8">
						<div class="controls">
							<input type="text" class="input-text input-block-level">
							<span class="help-block">Last</span>
						</div>
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">Email Address</label>
				<div class="controls">
					<input type="text" class="input-text input-block-level">
					<span class="help-block">Your email address (ex. you@domain.com)</span>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span6">
					<div class="control-group">
						<label class="control-label">Phone</label>
						<div class="controls">
							<input type="text" class="input-text input-medium">
							<span class="help-block">(xxx) xxx-xxxx</span>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="control-group">
						<label class="control-label">Organization</label>
						<div class="controls">
							<input type="text" class="input-text input-block-level">
						</div>
					</div>
				</div>
			</div>
		</fieldset>
	</div>
</div>