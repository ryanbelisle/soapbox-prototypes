<div class="socialshare petition-socialshare {{socialshare_class}}">
	{% if socialshare_ttl_align == 'right' %}
	<ul class="share-list">
		<li class="share-item"><a href="#" class="share-link"><i class="share-icon icon-facebook"></i></a></li>
		<li class="share-item"><a href="#" class="share-link"><i class="share-icon icon-twitter"></i></a></li>
	</ul>	
	<h5 class="share-title">Help Spread the Word</h5>
	{% else %}
	<h5 class="share-title">Help Spread the Word:</h5>
	<ul class="share-list">
		<li class="share-item"><a href="#" class="share-link"><i class="share-icon icon-facebook"></i></a></li>
		<li class="share-item"><a href="#" class="share-link"><i class="share-icon icon-twitter"></i></a></li>
	</ul>
	{% endif %}
</div>